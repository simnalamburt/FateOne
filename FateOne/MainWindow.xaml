        ResizeMode="CanMinimize" SizeToContent="WidthAndHeight" StateChanged="onStateChanged" Closing="onClose">
    <Grid Width="961" Height="457">
        <Image Name="KeyboardImage" Source="/FateOne;component/Images/Keyboard.png" Stretch="None"/>
